programa
{
	funcao inicio()
	{
		inteiro num
		escreva ("Entre com um núemero: ")
		leia (num)
		se (num % 2 == 0)
		{
			escreva ("É um número par")
		}
		senao
		{
			escreva ("É um número ímpar")
		}
	}
}
