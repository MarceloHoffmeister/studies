programa
{
	funcao inicio()
	{
		real base, alt
		escreva ("Insira a base do objeto a ser criado: ")
		leia (base)
		escreva ("\nInsira a altura do objeto: ")
		leia (alt)
		escreva ("\nO perímetro do objeto é ", base * alt)
		escreva ("\nA área do objeto é ", (base * 2) + (alt * 2), "\n")
	}
}
