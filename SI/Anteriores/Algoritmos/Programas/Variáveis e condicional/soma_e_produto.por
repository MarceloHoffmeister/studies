programa
{
	funcao inicio()
	{
		inteiro n1, n2
		escreva ("Insira um número inteiro: ")
		leia (n1)
		escreva ("\nInsira outro número inteiro: ")
		leia (n2)
		escreva ("\nA soma de ", n1, " e ", n2, " é ", n1 + n2)
		escreva ("\nO produto de ", n1, " e ", n2, " é ", n1 * n2, "\n")
	}
}
