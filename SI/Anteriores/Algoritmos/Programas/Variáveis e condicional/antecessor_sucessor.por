programa
{
	funcao inicio()
	{
		inteiro n
		escreva ("Insira um número inteiro: ")
		leia (n)
		escreva ("\nO número digitado foi ", n)
		escreva ("\nO número sucesso de ", n, " é ", n+1)
		escreva ("\nO número antecessor de ", n, " é ", n-1, "\n") 
	}
}
