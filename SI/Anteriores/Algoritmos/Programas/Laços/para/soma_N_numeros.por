programa
{
	funcao inicio()
	{
		inteiro n=0, soma=0, i=0

		escreva ("Informe um número: ")
		leia (n)

		limpa ()

		para ( i = 1; i <= n; i++)
		{
			soma += i
		}

		escreva ("A soma dos N números de ", n, " é ", soma, ".\n") 
	}
}
